# Server Configuration
NODE_ENV=development
SERVER_PORT=4000
SERVER_HOST=0.0.0.0

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here-change-in-production
BETTER_AUTH_BASE_URL=http://localhost:4000
# Optional: For production with subdomain cookies
# BETTER_AUTH_COOKIE_DOMAIN=.yourdomain.com
# Optional: Set to true to disable secure cookies (for local HTTP development)
# BETTER_AUTH_INSECURE_COOKIES=false

# Database Configuration (Turso/LibSQL)
DATABASE_AUTH_URL=libsql://your-database-url
DATABASE_AUTH_SECRET=your-database-auth-token

# CORS Configuration
# Comma-separated list of allowed origins (e.g., "http://localhost:3000,http://localhost:5173")
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenFGA Configuration
OPENFGA_API_URL=http://localhost:8080
OPENFGA_STORE_ID=your-store-id
OPENFGA_API_TOKEN=your-api-token
